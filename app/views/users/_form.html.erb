<%= form_with model: @user do |form|%>
  <%= form.label :username, "Username:"%>
  <%= form.text_field :username , placeholder: "User"%>
  <%= form.label :email, "Email:" %>
  <%= form.text_field :email , placeholder: "example@example.com"%>
  <%= form.label :password, "Password:" %>
  <%= form.password_field :password %>
  <%= form.submit @user.persisted? ? "Edit" : "Register" %>
<% end %>